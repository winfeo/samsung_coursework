<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Samsung_coursework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenButtonColor</item>
        <item name="colorPrimaryVariant">@color/greenButtonColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>


        <!-- Customize your theme here. -->

        <!-- Убрать название проекта -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="materialButtonStyle">@style/Widget.AppCompat.Button</item>
    </style>

    <!-- Большой заголовок -->
    <style name="TextHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Обычный текст -->
    <style name="TextSubtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Кастомная кнопка 1-->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <!-- Кастомная кнопка 2-->
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <!-- Кастомный стиль для карточек-->
    <style name="eventCard" parent="CardView">
        <item name="android:background">@drawable/bg_event_card</item>
    </style>

    <!-- Кастомный стиль для иконки возаста на карточке-->
    <style name="eventCardAge" parent="CardView">
        <item name="android:background">@drawable/bg_event_card_age</item>
    </style>
</resources>